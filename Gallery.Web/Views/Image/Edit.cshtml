@model Gallery.Business.Models.Image

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Image</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="Data" />
            <input type="hidden" asp-for="Format" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input type="text" asp-for="Title" value="@Model.Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input type="text" asp-for="Author" value="@Model.Author" class="form-control" />
            </div>
            <div class="form-group">
                <select asp-for="Categories" asp-items="ViewBag.Categories" value="@Model.Categories"></select>
                <input type="hidden" asp-for="Categories" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>